datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/moneybook"
}

// https://www.prisma.io/docs/orm/reference/prisma-schema-reference#binarytargets-options
generator client-native {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

generator client-windows {
  provider      = "prisma-client-js"
  binaryTargets = ["windows"]
}

generator client-macos-x64 {
  provider      = "prisma-client-js"
  binaryTargets = ["darwin"]
}

generator client-macos-arm64 {
  provider      = "prisma-client-js"
  binaryTargets = ["darwin-arm64"]
}

generator client-linux-musl-x64 {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl-openssl-3.0.x"]
}

generator client-linux-musl-arm64 {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-musl-arm64-openssl-3.0.x"]
}

generator client-linux-glibc-x64 {
  provider      = "prisma-client-js"
  binaryTargets = ["debian-openssl-3.0.x"]
}

generator client-linux-glibc-arm64 {
  provider      = "prisma-client-js"
  binaryTargets = ["linux-arm64-openssl-3.0.x"]
}

model Invoice {
  id        String    @id @default(cuid())
  title     String
  type      Type      @relation(fields: [typeId], references: [id])
  typeId    String
  account   Account   @relation(fields: [accountId], references: [id])
  accountId String
  amount    Float
  datetime  DateTime? @default(now())
  status    String?
}

model Account {
  id      String    @id @default(cuid())
  name    String
  number  String?
  type    String
  funds   Float?
  Invoice Invoice[]
}

model Type {
  id      String    @id @default(cuid())
  name    String
  Invoice Invoice[]
}
