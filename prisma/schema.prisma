datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/moneybook"
}

// https://www.prisma.io/docs/orm/reference/prisma-schema-reference#binarytargets-options
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

model Transaction {
  id        String    @id @default(cuid())
  title     String
  product   Product?  @relation(fields: [productId], references: [id])
  productId String?
  type      Type      @relation(fields: [typeId], references: [id])
  typeId    String
  account   Account   @relation(fields: [accountId], references: [id])
  accountId String
  amount    Float
  datetime  DateTime? @default(now())
  status    String?
}

model Product {
  id             String        @id @default(cuid())
  name           String
  code           String?
  specifications String?
  remark         String?
  Transaction    Transaction[]
}

model Type {
  id          String        @id @default(cuid())
  name        String
  Transaction Transaction[]
}

model Account {
  id          String        @id @default(cuid())
  name        String
  number      String?
  type        String
  funds       Float?
  Transaction Transaction[]
}
